global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:{{ node_exporter_port }}']
        labels:
          instance: '{{ minecraft_server_name }}'
  - job_name: 'minecraft_server'
    static_configs:
      - targets: ['localhost:{{ mc_prom_exporter_port }}']
        labels:
          instance: '{{ minecraft_server_name }}'